<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="#f4dddd"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <com.zhangshen147.android.hotelmanagersystem.view.RoundAppCompatImageView
            android:id="@+id/order_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/head_photo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/order_item_image"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/order_item_image">

            <TextView
                android:id="@+id/order_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2017-08-05" />

            <TextView
                android:id="@+id/order_item_room_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_item_time"
                tools:text="房间号：s406" />

            <TextView
                android:id="@+id/order_item_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_room_id"
                tools:text="来自于：老王" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/order_item_handle"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/popup_menu"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
